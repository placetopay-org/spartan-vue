{
  "name": "@placetopay/spartan-vue",
  "version": "3.0.0-beta.2",
  "type": "module",
  "description": "spartan vue lib",
  "module": "./dist/spartan-vue.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./locales": {
      "import": "./dist/locales/index.js",
      "types": "./dist/locales/index.d.ts"
    },
    "./i18n": {
      "import": "./dist/expose/i18n.js",
      "types": "./dist/expose/i18n.d.ts"
    },
    "./plugin": {
      "types": "./dist/types/expose/plugin.d.ts",
      "import": "./dist/plugin.mjs",
      "require": "./dist/plugin.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./styles/spartan-vue.css": "./dist/styles/spartan-vue.css",
    "./styles/main.css": "./dist/styles/main.css",
    "./styles/fonts.css": "./dist/styles/fonts.css",
    "./styles/plugin.css": "./dist/styles/plugin.css"
  },
  "repository": {
    "url": "git+https://github.com/placetopay-org/spartan-vue.git"
  },
  "scripts": {
    "dev": "nuxt dev --cwd docs",
    "build": "vite build && npm run build:types && rollup -c && cp -r src/locales dist/locales && node scripts/copyCss.js && node scripts/sanitizeBuild.js",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:rollup": "rollup -c",
    "docs:dev": "nuxt dev --cwd docs",
    "docs:build": "nuxt build --cwd docs",
    "docs:generate": "nuxt generate --cwd docs",
    "docs:preview": "nuxt preview --cwd docs",
    "docs:deploy": "cd docs && wrangler deploy",
    "test": "vitest watch --ui --coverage",
    "test:ci": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint --ext .ts,.vue --fix ./",
    "lint:check": "eslint --ext .ts,.vue .",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "foli": "npm run format && npm run lint",
    "foli:check": "npm run format:check && npm run lint:check"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.11",
    "vue": "3.5.28",
    "vue-i18n": "11.2.8"
  },
  "peerDependencies": {
    "@tailwindcss/forms": "0.5.11",
    "vue": "3.5.28",
    "vue-i18n": "11.2.8"
  },
