{
  "name": "@placetopay/spartan-vue",
  "version": "2.5.1",
  "type": "module",
  "description": "spartan vue lib",
  "module": "./dist/spartan-vue.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./locales": {
      "import": "./dist/locales/index.js",
      "types": "./dist/locales/index.d.ts"
    },
    "./i18n": {
      "import": "./dist/expose/i18n.js",
      "types": "./dist/expose/i18n.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "types": "./dist/types/expose/plugin.d.ts"
    },
    "./style.css": "./dist/spartan-vue.css"
  },
  "repository": {
    "url": "git+https://github.com/placetopay-org/spartan-vue.git"
  },
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "vite build && npm run build:types && rollup -c && cp -r src/locales dist/locales && node scripts/sanitizeBuild.js",
    "build:storybook": "storybook build",
    "build:rollup": "rollup -c",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "typecheck": "vue-tsc --noEmit",
    "format:check": "prettier . --check",
    "format": "prettier . --write",
    "test": "vitest watch --ui --coverage",
    "test:pipe": "vitest run --coverage",
    "lint": "npx eslint --ext .ts,.vue --fix ./",
    "lint:check": "npx eslint --ext .ts,.vue .",
    "foli": "npm run format & npm run lint",
    "foli:check": "npm run format:check & npm run lint:check"
  },
  "dependencies": {
    "vue": "^3.5.12",
    "vue-i18n": "^9.14.1"
  },
  "peerDependencies": {
    "vue": "^3.5.12",
