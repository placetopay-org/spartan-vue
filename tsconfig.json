{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "vue-i18n": ["./node_modules/vue-i18n/dist/vue-i18n.d.ts"]
    }
  },
  "include": ["env.d.ts", "src/**/*.vue", "src/**/*.js", "src/**/*.ts"],
  "exclude": ["src/stories/**/*", "src/**/__tests__/*", "src/**/*.cy.ts"]
}
