{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "dist",
        "types": ["@intlify/unplugin-vue-i18n/messages", "vitest/globals"],
        "paths": {
            "@/*": ["./src/*"],
            "@spartan*": ["./src/components/spartan"],
            "@internal*": ["./src/components/internal"],
            "vue-i18n": ["./node_modules/vue-i18n/dist/vue-i18n.d.ts"]
        }
    },
    "include": ["./vitest-setup.ts", "src/**/*.vue", "src/**/*.js", "src/**/*.ts", "src/stories/examples/SidebarLayouts/components/stories.stories.ts"],
    "exclude": ["src/stories/**/*"]
}
